<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen"
    android:padding="10dp"
    android:id="@+id/homelayout"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:gravity="center"
    android:padding="10dp">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="This App was developed by"
        android:textColor="#000500"
        android:textSize="25dp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/parisrebell"
        android:layout_marginTop="10dp"
        android:text="WIAD Fernando"
        android:textColor="#A80B0B"
        android:textSize="50dp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(D-BCE-21-0004)"
        android:textSize="30dp"
        android:textColor="#A80B0B"
        android:fontFamily="@font/parisrebell"/>

    <Button
        android:id="@+id/btnpref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Preferences"
        android:paddingHorizontal="30dp"
        android:textSize="19dp"
        android:background="@drawable/perfs"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/btndata"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button1"
        android:paddingHorizontal="30dp"
        android:textColor="#139E93"
        android:textSize="20dp"
        android:fontFamily="@font/btntxt"
        android:textStyle="bold"
        android:text="Enter   Data" />

</LinearLayout>


</RelativeLayout>